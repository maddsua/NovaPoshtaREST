{
	"compilerOptions": {
		"lib": ["DOM", "ES6", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"noEmit": false,
		"declaration": true,
		"rootDir": "./lib",
		"strict": true
	},
	"exclude": [
		"node_modules",
		"helpers",
		"dist"
	]
}